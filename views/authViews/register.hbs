<section class="p-5 mt-5 p-lg-0 pt-lg-5 text-center text-md-start">
    <div class="container">
        <form action="/auth/register" method="POST">
            <div class="form-group centered-div land-page-form mb-3">
                <label for="email">Email address:</label>
                <input type="email" name="email" class="form-control mt-1" id="email" placeholder="Enter email" value="{{userData.email}}">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
            </div>

            <div class="form-group centered-div land-page-form mb-3">
                <label for="username">Username:</label>
                <input type="text" name="username" class="form-control mt-1" id="username" placeholder="Peter" value="{{userData.username}}">
            </div>

            <div class="form-group centered-div land-page-form mb-3">
                <label for="passowrd">Password</label>
                <input type="password" name="password" class="form-control mt-1" id="password" placeholder="Password">
            </div>

            <div class="form-group centered-div land-page-form mb-3">
                <label for="rePass">Repeat Password:</label>
                <input type="password" name="rePass" class="form-control mt-1" id="rePass"
                    placeholder="Repeat password">
            </div>

            <div class="form-group centered-div land-page-form mb-3">
                <label for="birthday">Birthday:<em> optional</em></label>
                <input type="date" id="birthday" name="birthday" class="form-control mt-1" value="{{userData.birthday}}">
            </div>

            <div class="form-group centered-div land-page-form mb-3">
                <label for="profilePicture">Choose profile picture:<em> optional</em></label>
                <input type="file" id="profilePicture" name="profilePicture" class="form-control mt-1">
            </div>

            <div class="d-flex form-check m-auto w-25 mb-3">
                <input type="checkbox" name="isPrivate" accept="image/*" class="d-inline m-auto text-center form-check-input"
                    id="check-box">
                <label class="form-check-label d-block text-center m-auto" for="check-box">Private</label>
            </div>

            <div class="centered-div mb-5">
                <input type="submit" value="Register" class="d-block m-auto ml-24 btn btn-primary"></input>
            </div>
        </form>
    </div>
</section>