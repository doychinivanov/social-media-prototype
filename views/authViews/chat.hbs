<section class="p-5 mt-5 p-lg-0 pt-lg-5 text-center text-md-start">
    <div class="container">

        <div class="card text-center m-auto" style="width: 40rem;">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a id="create" class="nav-link active" href="javascript:void(0)">Create Chat Room</a>
                    </li>
                    <li class="nav-item">
                        <a id="join" class="nav-link" href="javascript:void(0)">Join Chat Room</a>
                    </li>
                </ul>
            </div>
            <div id="create-room" class="card-body m-auto mt-3" style="width: 30rem;">
                <form action="/chat/createRoom" method="POST">
                    <input class="form-control my-2" type="text" placeholder="Room name" name="roomName" value="{{roomData.roomName}}">
                    <input class="form-control my-2" type="password" placeholder="Room password" name="roomPassword">

                    <input class="btn btn-outline-primary" type="submit" value="Create">
                </form>
            </div>

             <div id="join-room" class="card-body m-auto mt-3" style="width: 30rem; display:none;">
                <form action="/chat/joinRoom" method="POST">
                    <input class="form-control my-2" type="text" placeholder="Room name" name="roomName">
                    <input class="form-control my-2" type="password" placeholder="Room password" name="roomPassword">

                    <input class="btn btn-outline-primary" type="submit" value="Join">
                </form>
            </div>
        </div>

    </div>
</section>

<script src="/static/js/chatHandler/switchChatForms.js"></script>